@using GPOrder.Helpers
@using Microsoft.AspNet.Identity
@model GPOrder.Models.Order

@Html.HiddenFor(model => model.Id)
@{ var description = string.Format("Created by {0} on {1} for {2}. Price = {3}", Model.CreateUser.UserName, Model.CreationDate.ConvertTimeFromUtc(User), Model.OrderDate.ConvertTimeFromUtc(User), Model.EstimatedPrice); }

@Html.DisplayFor(m => description)

@Html.ActionLink("Detail", "Details", "Orders", new { Model.Id }, null)
@if (Model.CreateUser.Id == User.Identity.GetUserId())
{
    @(" | ")
    @Html.ActionLink("Edit", "Edit", "Orders", new { Model.Id }, null)
    @(" | ")
    @Html.ActionLink("Delete", "Delete", "Orders", new { Model.Id }, null)
}