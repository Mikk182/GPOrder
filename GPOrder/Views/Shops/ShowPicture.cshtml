@model GPOrder.Models.ShopPicture

@{
    ViewBag.Title = "Shop pic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Show</h2>
@Html.ActionLink("Back to shop", "Details", new { Id = Model.ShopId })

@{
    var description = string.Format("{0} by {1} on {2}", Model.Name, Model.CreateUser.UserName, Model.CreationDate);
}
<img id="@Model.Id" class="img-thumbnail" alt="@description" title="@description" src="data:@Model.LinkedFile.ContentType;base64,@Convert.ToBase64String(Model.LinkedFile.Content)" />