        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShopLinks)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ShopLinks, "ShopLinks")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShopPictures)
        </dt>
