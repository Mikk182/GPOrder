<p>
    @Html.ActionLink("Back to List", "Index")
    @if (isOwner)
    {
        @(" | ")
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
        @(" | ")
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
    }
    @(" | ")
    @Html.ActionLink("Order", "Index", "GroupedOrders", new { shopId = Model.Id }, null)
</p>

