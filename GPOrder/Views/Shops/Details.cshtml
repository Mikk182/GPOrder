<p>
    @{
        var userId = User.Identity.GetUserId();
        var isOwner = userId == Model.OwnerUser.Id;
    }
    @if (isOwner)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }
    @Html.ActionLink("Add a pic", "AddPictures", new { Model.Id })
    @Html.ActionLink("Back to List", "Index")
</p>

