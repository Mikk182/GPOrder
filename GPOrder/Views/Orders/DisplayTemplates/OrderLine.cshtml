@model GPOrder.Models.OrderLine

@using (Html.BeginCollectionItem(Html.ViewData.TemplateInfo.HtmlFieldPrefix))
{
    <div class="form-horizontal">
        <h4>OrderLine</h4>
        <hr />
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.OrderedQty, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(m => m.OrderedQty)
                @Html.HiddenFor(m => m.OrderedQty)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Product.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Product.Name)
            @Html.HiddenFor(model => model.Product.Id)
        </div>
    </div>
</div>
}